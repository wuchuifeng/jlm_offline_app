<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/fl_headercontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tv_click_to_listener"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom"
            app:layout_constraintTop_toBottomOf="@id/fl_headercontainer"
            app:layout_constraintVertical_bias="0.0"
            app:layout_editor_absoluteX="8dp" />
        <Constraint
            android:id="@+id/srecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/fl_headercontainer"
            app:layout_constraintBottom_toTopOf="@id/sl_recording"
            />
        <Constraint
            android:id="@+id/sl_recording"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout"
            app:layout_constraintLeft_toLeftOf="@id/motion_layout"
            app:layout_constraintRight_toRightOf="@id/motion_layout"
            />
        <Constraint
            android:id="@+id/cl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/iv_record"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/motion_layout"
            app:layout_constraintStart_toStartOf="@id/motion_layout" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/recording">
        <Constraint
            android:id="@+id/fl_headercontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/srecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/cl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/iv_record"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="@id/motion_layout"
            app:layout_constraintStart_toStartOf="@id/motion_layout"
            app:layout_constraintTop_toBottomOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/tv_click_to_listener"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom"
            app:layout_constraintTop_toBottomOf="@id/fl_headercontainer" />
        <Constraint
            android:id="@+id/sl_recording"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout"
            app:layout_constraintLeft_toLeftOf="@id/motion_layout"
            app:layout_constraintRight_toRightOf="@id/motion_layout"
            android:layout_marginBottom="5dp"
            />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/has_result">
        <Constraint
            android:id="@+id/fl_headercontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/tv_click_to_listener"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom"
            app:layout_constraintTop_toBottomOf="@id/fl_headercontainer" />
        <Constraint
            android:id="@+id/srecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom"
            app:layout_constraintTop_toBottomOf="@id/fl_headercontainer" />
        <Constraint
            android:id="@+id/sl_recording"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout"
            app:layout_constraintLeft_toLeftOf="@id/motion_layout"
            app:layout_constraintRight_toRightOf="@id/motion_layout"
            />
        <Constraint
            android:id="@+id/cl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout" />
        <Constraint
            android:id="@+id/iv_record"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@id/motion_layout"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/motion_layout"
            app:layout_constraintStart_toStartOf="@id/motion_layout" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/recording"
        app:constraintSetStart="@+id/start" />
    <Transition
        app:constraintSetEnd="@+id/has_result"
        app:constraintSetStart="@+id/recording" />
    <Transition
        app:constraintSetEnd="@+id/recording"
        app:constraintSetStart="@+id/has_result" />
</MotionScene>

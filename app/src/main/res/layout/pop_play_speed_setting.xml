<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shape_radiusInTopLeft="10dp"
    app:shape_radiusInTopRight="10dp"
    app:shape_solidColor="@android:color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="翻译语音"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/popup_icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_open_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放语音"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.suke.widget.SwitchButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_checked="true"
                app:sb_checked_color="@color/theme_color"
                app:sb_show_indicator="false" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:text="关闭翻译语音后，将不会自动播放译文"
            android:textColor="@color/color_99"
            android:textSize="14sp" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="20dp" />

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            app:rsb_gravity="center"
            app:rsb_mode="single"
            app:rsb_progress_color="#FFD7D7D7"
            app:rsb_progress_default_color="#FFD7D7D7"
            app:rsb_progress_height="20dp"
            app:rsb_step_auto_bonding="true"
            app:rsb_step_color="@android:color/white"
            app:rsb_step_height="18dp"
            app:rsb_step_width="3dp"
            app:rsb_steps="4"
            app:rsb_thumb_drawable="@drawable/shape_step_seek_bar_thumb"
            app:rsb_thumb_height="40dp"
            app:rsb_thumb_width="40dp"
            app:rsb_tick_mark_layout_gravity="bottom" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="50dp"
            android:paddingHorizontal="50dp"
            app:flexDirection="row"
            app:flexWrap="nowrap"
            app:justifyContent="space_between">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="短"
                android:textColor="@color/color_66"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shorter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="较短"
                android:textColor="@color/color_66"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="默认"
                android:textColor="@color/color_66"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_longer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="较长"
                android:textColor="@color/color_66"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="长"
                android:textColor="@color/color_66"
                android:textSize="13sp" />
        </com.google.android.flexbox.FlexboxLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.hjq.shape.layout.ShapeConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/ic_main_bg"
    app:layoutDescription="@xml/act_listener_mode_scene">

    <!-- header -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/head_banner"
        style="@style/listener_headerRoot"
        app:layout_constraintTop_toTopOf="@id/motion_layout"
        >

        <!-- 左输出UI -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <!--        "@drawable/tools_nav_icon_back_black_def"-->
            <include layout="@layout/include_back" android:id="@+id/include_back" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_from_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="right"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/str_translator"
                        android:textColor="@color/color_66"
                        android:textSize="11sp" />
                    <com.hjq.shape.view.ShapeTextView
                        style="@style/listener_lang_text"
                        android:id="@+id/tv_from_language"
                        android:text="中文"
                        app:shape_radius="20dp"
                        app:shape_solidColor="@color/color_light_blue"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:src="@mipmap/ic_translate_right" />
        <!--右边的语言-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <!--左声道语言选择-->
            <!-- 右输出UI -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_to_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="蓝灯耳麦"
                        android:textColor="@color/color_66"
                        android:textSize="11sp" />

                    <com.hjq.shape.view.ShapeTextView
                        style="@style/listener_lang_text"
                        android:id="@+id/tv_to_language"
                        android:text="英文"
                        app:shape_radius="20dp"
                        app:shape_solidColor="@color/color_light_blue"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!-- 右声道语言选择 -->
            <!-- 右输出UI -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_to_right_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="绿灯耳麦"
                        android:textColor="@color/color_66"
                        android:textSize="11sp" />

                    <com.hjq.shape.view.ShapeTextView
                        style="@style/listener_lang_text"
                        android:id="@+id/tv_to_right_language"
                        android:text="原声"
                        app:shape_radius="20dp"
                        app:shape_solidColor="@color/color_light_blue"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--            <androidx.appcompat.widget.LinearLayoutCompat-->
            <!--                android:id="@+id/ll_to_right_language"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:layout_weight="2"-->
            <!--                android:gravity="center"-->

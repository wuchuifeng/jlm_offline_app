    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_click_to_listener"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:text="点击麦克风按钮开始说话"
        android:textColor="@color/color_66"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom"
        app:layout_constraintEnd_toEndOf="@id/motion_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/motion_layout"
        app:layout_constraintTop_toBottomOf="@id/motion_layout"
        app:layout_constraintVertical_bias="1.0" />

    <com.hjq.shape.layout.ShapeRecyclerView
        android:id="@+id/srecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/head_banner"
        app:layout_constraintBottom_toTopOf="@id/sl_recording"
        app:layout_constraintEnd_toEndOf="@id/motion_layout"
        app:layout_constraintStart_toStartOf="@id/motion_layout"
        />
    
    <!-- 录制中的UI -->
    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/sl_recording"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:shape_radius="36dp"
        app:shape_solidColor="@color/white"
        app:shape_strokeSize="2dp"
        app:shape_strokeColor="@color/color_search_bg"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"

        >
        <me.xfans.lib.voicewaveview.VoiceWaveView
            android:id="@+id/voice_wave"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:lineColor="@color/color_main"
            app:waveMode="left_right"
            android:gravity="center"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/color_text_third"
            android:text="点击暂停"
            android:textFontWeight="400"
            />

    </com.hjq.shape.layout.ShapeLinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2.5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/pop_white_bg"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <!-- 第一翻译文字 (主要翻译) - 最上方 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_translation_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/trans_content_target"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="你好，现在可以说话了。" />

        <!-- 第二翻译文字 (双语输出) - 第二位置 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_translation_second_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingVertical="4dp"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/trans_content_target"
            android:lineSpacingMultiplier="1.2"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_translation_content"
            tools:text="Second language translation" />

        <!-- Barrier：自动适应第二翻译的显示/隐藏 -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_translation_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_translation_content,tv_translation_second_content" />

        <!-- 分隔线 -->
        <View
            android:id="@+id/view_line"
            style="@style/divider_horizontal"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_translation_end" />

        <!-- 源语言文字 (识别文字) - 最下方 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/trans_content_target"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            tools:text="Hello, you can talk now." />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 选择图标 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_uikit_control_picker"
        android:visibility="invisible" />

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/ic_main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.chawloo.base.widget.HeadBanner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:title="原声一对多"
        tools:ignore="MissingConstraints" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_record"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="开始"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_radius="35dp"
        app:shape_solidColor="@color/color_main"
        android:elevation="5dp"
        />

    <!-- 录制中的UI -->
    <com.hjq.shape.layout.ShapeLinearLayout
        android:visibility="gone"
        android:id="@+id/sl_recording"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        app:shape_radius="36dp"
        app:shape_solidColor="@color/white"
        app:shape_strokeSize="2dp"
        app:shape_strokeColor="@color/color_search_bg"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <me.xfans.lib.voicewaveview.VoiceWaveView
            android:id="@+id/voice_wave"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:lineColor="@color/color_main"
            app:waveMode="left_right"
            android:gravity="center"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_text_third"
            android:text="点击暂停"
            android:textFontWeight="400"
            />
    </com.hjq.shape.layout.ShapeLinearLayout>


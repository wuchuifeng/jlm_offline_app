<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="2dp"
    android:paddingVertical="8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    app:shape_radius="10dp"
    app:shape_strokeColor="@color/white"
    app:shape_solidColor="@color/color_item_bg"
    app:shape_strokeSize="1dp"
    >

    <!--左声道-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="13sp"-->
<!--            android:textColor="@color/theme_color"-->
<!--            android:text="蓝灯："-->
<!--            android:paddingVertical="5dp"-->
<!--            />-->
        <com.hjq.shape.view.ShapeView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:shape_radius="8dp"
            app:shape_solidColor="@color/theme_color"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textFontWeight="400"
            android:hint="..."
            android:textColor="@color/color_text_primary"
            android:textColorHint="@android:color/black"
            />

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/iv_play"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="10dp"-->
<!--            android:src="@drawable/translate_pop_icon_play_def" />-->
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/iv_play"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/icon_translate_play" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--右声道-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="13sp"-->
<!--            android:textColor="@color/theme_color"-->
<!--            android:text="绿灯："-->
<!--            android:paddingVertical="5dp"-->
<!--            />-->
        <com.hjq.shape.view.ShapeView
            android:layout_width="16dp"

            android:layout_height="16dp"
            app:shape_radius="8dp"
            app:shape_solidColor="@color/color_main_green"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_target_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textFontWeight="400"
                android:hint="..."
                android:textColor="@color/color_text_primary"
                android:textColorHint="@android:color/black"
                />

<!--            <androidx.appcompat.widget.AppCompatImageView-->
<!--                android:id="@+id/iv_play_right"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:padding="10dp"-->
<!--                android:src="@drawable/translate_pop_icon_play_def" />-->
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/iv_play_right"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/icon_translate_play" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textFontWeight="400"
        android:hint="..."
        android:textColor="@color/color_text_second"
        android:textColorHint="@color/color_text_second"
        />
</com.hjq.shape.layout.ShapeLinearLayout>
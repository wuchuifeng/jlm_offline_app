<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:shape_radiusInTopLeft="20dp"
    app:shape_radiusInTopRight="20dp"
    app:shape_solidColor="@color/bg_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/iv_close"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="10dp"-->
<!--            android:src="@drawable/popup_icon_close"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="语言选择"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_tertiary"
            android:paddingVertical="3dp"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <com.hjq.shape.view.ShapeTextView
                android:layout_gravity="right"
                style="@style/listener_lang_text"
                android:id="@+id/tv_from_language"
                android:text="英文"
                app:shape_radius="20dp"
                app:shape_solidColor="@color/color_light_blue"
                app:shape_textColor="@android:color/black"
                app:shape_textSelectedColor="@color/theme_color"
                android:drawableEnd="@drawable/selector_lang_choose_list"
                />
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_translate_right" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <com.hjq.shape.view.ShapeTextView
                style="@style/listener_lang_text"
                android:id="@+id/tv_to_language"
                android:text="英文"
                app:shape_radius="20dp"
                app:shape_solidColor="@color/color_light_blue"
                app:shape_textColor="@android:color/black"
                app:shape_textSelectedColor="@color/theme_color"
                android:drawableEnd="@drawable/selector_lang_choose_list"
                />
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- 搜索框，暂时隐藏 -->
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/cl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:shape_radius="100dp"
        app:shape_solidColor="#0a000000"
        app:shape_type="rectangle">

<!--        android:drawableStart="@drawable/history_search_icon_search"-->
        <cn.chawloo.base.widget.DeleteEditText
            android:id="@+id/et_language_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawableStart="@mipmap/ic_search"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:hint="搜索语言"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:singleLine="true"
            android:textColor="@color/color_8c8c8c"
            android:textSize="@dimen/text_hint"
            android:editable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.hjq.shape.layout.ShapeConstraintLayout>

    <!-- 声音的选择 -->
    <com.hjq.shape.layout.ShapeLinearLayout
        android:visibility="gone"
        android:id="@+id/ll_voicer_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:shape_radius="8dp"
        app:shape_solidColor="@color/white">

        <TextView
            android:id="@+id/tv_lang_describ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="韩语听到的声音是："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_voicer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="男声"
            android:textSize="16sp" />
    </com.hjq.shape.layout.ShapeLinearLayout>

    <com.hjq.shape.layout.ShapeRecyclerView
        android:id="@+id/rv_language"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:shape_radius="8dp"
        app:shape_solidColor="#ffffff" />
<!--    确定按钮-->
    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_confirm"
        style="@style/langSelect_confirm_button"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/theme_color"
        app:shape_textColor="@color/white"
        />
</com.hjq.shape.layout.ShapeLinearLayout>
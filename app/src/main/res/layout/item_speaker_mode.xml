<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="25dp"
    android:background="@drawable/tooltip_arrow_white_left"
    android:paddingHorizontal="14dp"
    android:paddingVertical="12dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_translation_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:textColor="@color/theme_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/iv_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Can you represent the police ?" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="9dp"
        android:src="@drawable/translate_pop_icon_play_def"
        app:layout_constraintBottom_toBottomOf="@id/tv_translation_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_translation_content" />

    <View
        android:id="@+id/view_line"
        style="@style/divider_horizontal"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_translation_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingVertical="6dp"
        android:textColor="@color/color_262626"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        tools:text="你能代表警方吗？" />

</androidx.constraintlayout.widget.ConstraintLayout>
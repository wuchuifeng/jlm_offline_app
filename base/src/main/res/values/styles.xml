<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="divider_vertical"> <!-- 垂直分割线 -->
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#d4d4d4</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="divider_horizontal"> <!-- 水平分割线 -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#d4d4d4</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="NumberProgressBar_Red">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="progress_max">100</item>
        <item name="progress_current">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#e94339</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#e94339</item>
        <item name="progress_reached_bar_height">4dp</item>
        <item name="progress_unreached_bar_height">3dp</item>
    </style>

    <style name="UpdateDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowShowAnimation">@anim/pop_middle_show</item>
        <item name="android:windowHideAnimation">@anim/pop_middle_dismiss</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>